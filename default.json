{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":enablePreCommit",
    "schedule:weekends",
    ":semanticCommitTypeAll(chore)"
  ],
  "prConcurrentLimit": 5,
  "osvVulnerabilityAlerts": true,
  "configMigration": true,
  "autodiscover": true,
  "automergeType": "pr",
  "major": { "automerge": false },
  "minimumReleaseAge": "7 days",
  "automerge": true,
  "lockFileMaintenance": { "enabled": true },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$/",
        "/(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$/",
        "/(^|/)container/([Dd]ocker|[Cc]ontainer)file[^/]*$/",
        "/\\.env$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+)(?:.*?depName=(?<depName>\\S+))?(?:.*?registryUrl=(?<registryUrl>\\S+))?(?:.*?extractVersion=(?<extractVersion>\\S+))?(?:.*?versioning=(?<versioning>\\S+))?\\s.*?(ARG\\s+)?\\w*_?VERSION[=:]\\s*version_(?<currentValue>\\d+)\\s",
        "# renovate: datasource=(?<datasource>\\S+)(?:.*?depName=(?<depName>\\S+))?(?:.*?registryUrl=(?<registryUrl>\\S+))?(?:.*?extractVersion=(?<extractVersion>\\S+))?(?:.*?versioning=(?<versioning>\\S+))?\\s.*?(ARG\\s+)?\\w*_?VERSION[=:]\\s*(?<currentValue>\\S+)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "labels": ["dependency üì¶Ô∏è"],
  "packageRules": [
    { "matchManagers": ["cargo", "npm", "dockerfile"] },
    {
      "groupName": "cargo deps non-major",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "pre-commit non-major",
      "matchManagers": ["pre-commit"],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["build"]
    },
    {
      "groupName": "node deps non-major",
      "matchManagers": ["bun", "npm"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
